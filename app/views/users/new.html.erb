
<div class="text-center">
  <form style="max-width:500px;margin:auto;">

  <br>
  <h2>Sign Up</h2>

    <% @errors && @errors.each do |e| %>
      <li><%=e%></li>
    <%end%>
   

    <%= form_for @user, url: signup_path do |f| %>
    
      <%=f.label "Username"%>
      <div class="mb-3">
      <%=f.text_field :username %><br>
      </div>

      <%=f.label "Password"%>
      <div class="mb-1">
      <%=f.password_field :password %><br>
      </div>

      <%=f.label "Password Confirmation"%>
      <div class="mb-1">
      <%=f.password_field :password_confirmation %><br>
      </div>

      <%=f.submit "Sign Up"%>

    <%end%>

    <br>
    

    <%=link_to "Sign Up With Facebook", '/auth/facebook'%>

    <%=link_to "Sign Up With Facebook", '/auth/facebook', class: 'btn btn-primary btn-sm' %>



</div>

